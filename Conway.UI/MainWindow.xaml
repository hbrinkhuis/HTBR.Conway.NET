<Window x:Class="Conway.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conway.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" d:DataContext="{d:DesignInstance local:MainWindowViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Label>Rows: </Label>
            <Label Content="{Binding Rows}"/>
            <Label>Columns: </Label>
            <Label Content="{Binding Columns}"/>
        </StackPanel>

        <Canvas x:Name="ConwayCanvas" Grid.Row="1" Background="DarkGray" MouseDown="UIElement_OnMouseDown"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Background="White">
            <Label>Canvas width:</Label>
            <Label Content="{Binding ElementName=ConwayCanvas, Path=ActualWidth}"/>
            <Label>Canvas height:</Label>
            <Label Content="{Binding ElementName=ConwayCanvas, Path=ActualHeight}"/>
        </StackPanel>
    </Grid>
</Window>
